<!DOCTYPE html>
<html>
  <head>
    <title>BudgetApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <header>
        <% if request.env['PATH_INFO'] == groups_path %>
          <i class="fa-solid fa-bars"></i>
        <% else %>
          <%= link_to "Back", :back, style: "color: #fff; text-decoration: none;" %>
        <% end %>
        <h2><%= @page %></h2>
        <a href=<%= destroy_user_session_path %> data-turbo-method="delete">
          <i class="fa-solid fa-right-from-bracket" style="color: #fff;"></i>
        </a>
      </header>
    <% end %>

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
