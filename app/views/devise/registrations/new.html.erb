<div class="log">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full name", required: true %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required: true %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", required: true %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Register" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
